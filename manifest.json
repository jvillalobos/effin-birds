{
  "manifest_version": 2,
  "name": "__MSG_extensionName__",
  "description": "__MSG_extensionDescription__",
  "version": "1.0",
  "homepage_url": "https://twitter.com/effinbirds",
  "default_locale": "en",

  "applications": {
    "gecko": {
      "id": "effin-birds@jorgev"
    }
  },

  "icons": {
    "48": "icons/effin-48.png",
    "96": "icons/effin-96.png"
  },

  "background": {
    "scripts": [ "background.js" ]
  },

  "permissions": [
    "https://*.tumblr.com/*",
    "storage"
  ],

  "browser_action": {
    "default_icon": {
      "16": "button/effin-16.png",
      "32": "button/effin-32.png",
      "64": "button/effin-64.png"
    },

    "default_title": "Effin' Birds",
    "default_popup": "popup/birds.html"
  }
}
